<?xml version="1.0" encoding="UTF-8" ?>     
<!DOCTYPE configuration     
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"     
    "http://mybatis.org/dtd/mybatis-3-config.dtd">  
<configuration>  
    <typeAliases>  
        <!--给实体类起一个别名 user -->  
        <typeAlias type="com.fun.playinfo.thrift.OpenPlayInfoVO" alias="OpenPlayInfoVO" />  
        <typeAlias type="com.fun.playinfo.thrift.FileTypeVO" alias="FileTypeVO" />  
        <typeAlias type="com.fun.playinfo.thrift.DefinitionVO" alias="DefinitionVO" />  
    </typeAliases>  
    <!--数据源配置  这块用 mysql数据库 -->  
    <environments default="development">  
        <environment id="development">  
            <transactionManager type="jdbc" />  
            <dataSource type="POOLED">  
                <property name="driver" value="com.mysql.jdbc.Driver" />  
                <property name="url" value="jdbc:mysql://192.168.16.123:3306/open_platform?useUnicode=true&amp;characterEncoding=utf8"/>  
                <property name="username" value="ouser" />  
                <property name="password" value="12345" />  
            </dataSource>  
        </environment>  
    </environments>  
    <mappers>  
        <!--userMapper.xml装载进来  同等于把“dao”的实现装载进来 -->  
        <mapper resource="myBatis/playInfoMapper.xml" />  
        <mapper resource="myBatis/fileTypeMapper.xml" />  
        <mapper resource="myBatis/definitionMapper.xml" />  
    </mappers>  
</configuration> 